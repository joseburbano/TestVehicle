{
    "compilerOptions": {
        "baseUrl": "./",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "outDir": "./build",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings/global",
        "typings/global.d.ts"
    ]
}
